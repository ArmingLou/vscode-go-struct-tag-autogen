{
	"name": "go-struct-tag-autogen",
	"displayName": "Go Struct Tag Autocomplete & Generator",
	"description": "Customizable Go struct tag autocomplete & generator",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:go"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "goStructTagAutogen.generateStructTags",
				"title": "Go Tag Autogen: Generate Struct Tags"
			}
		],
		"menus": {
			"editor/context": [{
				"when": "resourceLangId == go",
				"command": "goStructTagAutogen.generateStructTags",
				"group": "goStructTagAutogen"
			}]
		},
		"keybindings": [
			{
				"command": "goStructTagAutogen.generateStructTags",
				"mac": "ctrl+shift+t",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"title": "Go Struct Tag Autocomplete & Generator",
			"properties": {
				"goStructTagAutogen.suggestion.json": {
					"type": "object",
					"default": {
						"enabled": true,
						"cases": ["camel"],
						"options": ["-", "omitempty"]
					},
					"description": "Go struct tag suggestion config for `json` tag"
				},
				"goStructTagAutogen.suggestion.bson": {
					"type": "object",
					"default": {
						"enabled": true,
						"cases": ["snake"],
						"options": ["-", "omitempty"]
					},
					"description": "Go struct tag suggestion config for `bson` tag"
				},
				"goStructTagAutogen.suggestion.binding": {
					"type": "object",
					"default": {
						"enabled": true,
						"choices": ["required"]
					},
					"description": "Go struct tag suggestion config for `binding` tag"
				},
				"goStructTagAutogen.generation": {
					"type": "object",
					"default": {
						"tags": "json:\"{{camel}}\" bson:\"{{snake}}\""
					},
					"description": "Go struct tag generation command config"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.64.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.2"
	}
}
